<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/GetAllAddressRelativeLayoutUserAddressFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/RefreshPosterSwipeRefreshLayoutUserPostersFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/PosterRecyclerViewUserPostersFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            />


    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/LoadMoreProgressPosterFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        style="@style/Widget.AppCompat.ProgressBar"
        android:background="#00000000"
        android:indeterminateDrawable="@drawable/view_loading_style"
        android:layout_gravity="center_horizontal"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/NewPosterFloatingActionButtonUserPostersFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24"
        app:backgroundTint="@color/ButtonBackgroundThemeColor" />

</RelativeLayout>
