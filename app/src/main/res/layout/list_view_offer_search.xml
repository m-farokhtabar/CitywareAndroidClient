<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
        android:id="@+id/UserNameSearchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/FontSemiBlackColor"
        tools:ignore="RtlHardcoded" />

    <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
        android:id="@+id/NickNameSearchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/UserNameSearchTextView"
        android:layout_toStartOf="@+id/UserNameSearchTextView"
        android:gravity="right|center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/FontSemiBlackColor"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>