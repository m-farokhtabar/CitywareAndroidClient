<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ir.rayas.app.citywareclient.View.Master.CommerceActivity"
    tools:openDrawer="right">

    <RelativeLayout
        android:id="@+id/MasterContentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundLight">

        <include
            android:id="@+id/ToolBar"
            layout="@layout/view_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/MainMenuBottom"
            android:layout_below="@+id/ToolBar"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp"
                tools:ignore="ScrollViewSize">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/BackgroundWhiteColor"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/MarketerCommissionRelativeLayoutCommerceActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/square_marketer_24dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/IconMarketerImageViewCommerceActivity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="26dp"
                            android:layout_marginStart="26dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ic_marketer_24dp"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/IconMarketerImageViewCommerceActivity"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/background_layer_blue_marketer"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="@string/marketer_commission"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/FontBlackColor"
                                android:textStyle="bold"
                                tools:ignore="RtlHardcoded" />

                            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="3dp"
                                android:gravity="right"
                                android:text="@string/marketer_commission_details"
                                android:textAppearance="?android:textAppearanceSmall"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/BackgroundWhiteColor"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/IncomeFromBusinessRelativeLayoutCommerceActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/square_income_24dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/IconIncomeFromBusinessImageViewCommerceActivity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="26dp"
                            android:layout_marginStart="26dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ic_income_24dp"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/IconIncomeFromBusinessImageViewCommerceActivity"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/background_layer_blue_income"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="@string/income_from_business"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/FontBlackColor"
                                android:textStyle="bold"
                                tools:ignore="RtlHardcoded" />

                            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="3dp"
                                android:gravity="right"
                                android:text="@string/income_from_business_details"
                                android:textAppearance="?android:textAppearanceSmall"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/BackgroundWhiteColor"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/GetDiscountsRelativeLayoutCommerceActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/square_get_discount_24dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/IconGetDiscountsImageViewCommerceActivity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="26dp"
                            android:layout_marginStart="26dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/ic_discount_24dp"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/IconGetDiscountsImageViewCommerceActivity"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/background_layer_blue_get_discount"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="@string/get_discounts"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/FontBlackColor"
                                android:textStyle="bold"
                                tools:ignore="RtlHardcoded" />

                            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="3dp"
                                android:gravity="right"
                                android:text="@string/get_discounts_details"
                                android:textAppearance="?android:textAppearanceSmall"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/MainMenuBottom"
            layout="@layout/main_menu_bar_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <include
        android:id="@+id/LoadingLinearLayout"
        layout="@layout/view_loading"
        android:visibility="gone" />

    <android.support.design.widget.NavigationView
        android:id="@+id/DrawerNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/view_header_menu_drawer"
        app:menu="@menu/view_drawer"
        tools:ignore="RtlHardcoded" />

</android.support.v4.widget.DrawerLayout>

