<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/BusinessContainerRelativeLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_weight="1"
android:background="@drawable/selector_item_in_recycler_view"
android:orientation="horizontal">

<ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
    android:id="@+id/UserAddressTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:singleLine="true"
    android:textColor="@color/FontBlackColor"
    android:textStyle="bold"
    tools:ignore="RelativeOverlap" />

<ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
    android:id="@+id/PostalCodeTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/UserAddressTextView"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:singleLine="true"
    android:textColor="@color/FontSemiBlackColor"
    tools:ignore="RelativeOverlap" />

<RadioButton
    android:id="@+id/AddressSelectedRadioButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:background="@drawable/selector_toggle_button"
    android:button="@null" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="100dp"
    android:layout_marginStart="100dp"
    android:background="@color/BackgroundGrayColor"/>

</RelativeLayout>
