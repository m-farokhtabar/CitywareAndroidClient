<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BackToolBar"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/BackgroundThemeColor"
    android:theme="@style/AppTheme">

    <ImageView
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="left"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/BackImageButtonBackToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="12dp"
        android:contentDescription="@string/back"
        android:background="@drawable/selector_image_button"
        android:src="@drawable/ic_back_24dp" />

    <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
        android:id="@+id/TitleBackToolbar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="right"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/FontWhiteColor"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</android.support.v7.widget.Toolbar>