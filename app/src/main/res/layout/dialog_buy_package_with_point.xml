<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/HeaderColorDialogBuyPackageWithPoint"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/BackgroundThemeColor" />


        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/DialogBuyPackageWithPointTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HeaderColorDialogBuyPackageWithPoint"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/buy_package"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/LinearYourPointDialogBuyPackageWithPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DialogBuyPackageWithPointTitleTextView"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/YourPointTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/FontSemiDarkThemeColor" />

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/your_point"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </LinearLayout>

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/DialogBuyPackageWithPointDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/LinearYourPointDialogBuyPackageWithPoint"
            android:layout_alignRight="@+id/LinearYourPointDialogBuyPackageWithPoint"
            android:layout_below="@+id/LinearYourPointDialogBuyPackageWithPoint"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:textAppearance="?android:textAppearanceSmall"
            tools:ignore="RtlHardcoded" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/DialogBuyPackageWithPointDescriptionTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/BackgroundColorHeaderAddressLayout"
            android:orientation="horizontal">

            <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
                android:id="@+id/DialogBuyPackageWithPointCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/view_button_normal_theme_style"
                android:gravity="center"
                android:text="@string/not_now"
                android:textColor="@color/FontWhiteColor" />

            <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
                android:id="@+id/DialogBuyPackageWithPointOkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/view_button_normal_green_style"
                android:text="@string/payment"
                android:textColor="@color/FontWhiteColor" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>