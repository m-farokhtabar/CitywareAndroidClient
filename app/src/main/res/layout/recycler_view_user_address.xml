<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/UserAddressContainerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_item_in_recycler_view">

        <RelativeLayout
            android:id="@+id/HeaderAddressRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BackgroundColorHeaderAddressLayout">

            <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
                android:id="@+id/UserDeleteAddressButtonPersianView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/selector_button_red_style"
                android:text="@string/delete"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="@color/FontWhiteColor" />

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/UserCreateDateAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/UserDeleteAddressButtonPersianView"
                android:layout_toEndOf="@+id/UserDeleteAddressButtonPersianView"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="@color/FontSemiBlackColor" />
        </RelativeLayout>


        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/UserAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/HeaderAddressRelativeLayout"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontBlackColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/UserPostalCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserAddressTextView"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/UserPostalCodeTitleTextView"
            android:layout_toStartOf="@+id/UserPostalCodeTitleTextView"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontSemiBlackColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/UserPostalCodeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/UserAddressTextView"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/postal_code"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontSemiBlackColor" />

        <LinearLayout
            android:id="@+id/EditAddressLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/UserAddressTextView"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/UserEditAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:text="@string/edit_address"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FontThemeColor"
                android:visibility="visible" />

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/UserEditAddressIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/FontThemeColor"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ShowMapLinearLayoutUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/EditAddressLinearLayout"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/ShowMapAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/show_map_Address_on_map"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FontSemiDarkThemeColor" />

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/ShowMapAddressIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/FontSemiDarkThemeColor"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>