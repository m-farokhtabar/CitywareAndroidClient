<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BackgroundWhiteColor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/MasterContentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            android:id="@+id/BackToolBar"
            layout="@layout/view_back_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/UserNameCardViewCommissionActivity"
            android:layout_below="@+id/BackToolBar"
            android:orientation="vertical">

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/TitleBusinessTextViewCommissionActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="16dp"
                android:gravity="right|center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/FontSemiDarkThemeColor"
                tools:ignore="RtlHardcoded" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_horizontal|center_vertical"
                app:elevation="8dp"
                tools:ignore="NestedWeights">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp"
                    tools:ignore="RtlHardcoded">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="6dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@+id/AddressTitleTextViewCommissionActivity"
                            android:background="@color/LineTopColor"
                            tools:ignore="Suspicious0dp" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/AddressTitleTextViewCommissionActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/address"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor" />

                    </RelativeLayout>


                    <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                        android:id="@+id/AddressTextViewCommissionActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:singleLine="true"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/FontBlackColor" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    tools:ignore="UselessParent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="3"
                            android:gravity="center"
                            android:singleLine="false"
                            android:text="@string/commission"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontBlackColor"
                            android:textIsSelectable="false"
                            tools:ignore="RtlHardcoded" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="3"
                            android:gravity="center"
                            android:singleLine="false"
                            android:text="@string/discount"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontBlackColor"
                            android:textIsSelectable="false"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="8"
                            android:gravity="center|right"
                            android:singleLine="true"
                            android:text="@string/product_name"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontBlackColor"
                            android:textIsSelectable="false"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


                    </TableRow>
                </TableLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/BackgroundLight"
                android:orientation="vertical"
                android:padding="8dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    tools:ignore="UselessParent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/MarketingCommissionTextViewCommissionActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="3"
                            android:gravity="center"
                            android:singleLine="false"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor"
                            android:textIsSelectable="false"
                            tools:ignore="RtlHardcoded" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/CustomerPercentTextViewCommissionActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="3"
                            android:gravity="center"
                            android:singleLine="false"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor"
                            android:textIsSelectable="false"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/ProductNameTextViewCommissionActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="8"
                            android:gravity="center|right"
                            android:singleLine="true"
                            android:text="@string/other_products_not_listed"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor"
                            android:textIsSelectable="false"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />


                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/MessageTextViewCommissionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="16dp"
                android:gravity="center"
                android:singleLine="false"
                android:text="@string/message_product_null"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FontSemiDarkThemeColor"
                android:visibility="gone"
                tools:ignore="RtlHardcoded" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ShowProductListRecyclerViewCommissionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/UserNameCardViewCommissionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LinearLayoutCommissionActivity"
            android:layout_gravity="right|center_vertical"
            android:elevation="5dp"
            android:gravity="right|center_vertical"
            tools:ignore="RtlHardcoded,UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                    android:id="@+id/UserNameTextViewCommissionActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="right|center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/FontSemiDarkThemeColor"
                    tools:ignore="RtlHardcoded" />

                <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="@string/introducing_to"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/FontSemiDarkThemeColor"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/LinearLayoutCommissionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
                android:id="@+id/IntroducingFriendsButtonCommissionActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/selector_button_green_style"
                android:text="@string/introducing_to_friends"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/FontWhiteColor"
                android:textStyle="bold" />

            <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
                android:id="@+id/UserSelectionButtonCommissionActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/selector_button_theme_style"
                android:text="@string/user_selection"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/FontWhiteColor"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/LoadingLinearLayout"
        layout="@layout/view_loading"
        android:visibility="gone" />

</LinearLayout>
