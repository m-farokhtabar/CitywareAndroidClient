<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp">

    <ImageView
        android:id="@+id/StickerCommentImageViewShowCommentBusinessActivity"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_vertical|right"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@drawable/view_layout_theme_style"
        android:layout_toLeftOf="@+id/StickerCommentImageViewShowCommentBusinessActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:gravity="left">

            <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                android:id="@+id/CreateDateCommentTextViewShowCommentBusinessActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="jkasfsgjn"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FontSemiBlackColor" />

            <RatingBar
                android:id="@+id/RatingUserCommentRatingBarShowCommentBusinessActivity"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:scaleX="1"
                android:scaleY="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:isIndicator="true"
                android:layout_marginRight="16dp"
                android:progressTint="@color/BackgroundThemeColor"
                android:stepSize="0.01"
                android:secondaryProgressTint="@color/BackgroundThemeLightColor"/>




        </LinearLayout>

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/NickNameCommentTextViewShowCommentBusinessActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontSemiBlackColor" />
        
        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/CommentTextViewShowCommentBusinessActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontBlackColor" />

    </LinearLayout>


</RelativeLayout>