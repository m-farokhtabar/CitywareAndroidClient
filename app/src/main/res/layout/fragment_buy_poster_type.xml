<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundWhiteColor">

    <LinearLayout
        android:id="@+id/LinearYourCreditDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="@string/toman"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/FontSemiDarkThemeColor"
            tools:ignore="RtlHardcoded" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/YourCreditTextViewBuyPosterTypeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/FontSemiDarkThemeColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="@string/credit_now"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/LineFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/LinearYourCreditDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/LineTopColor" />

    <LinearLayout
        android:id="@+id/LinearPosterTypeDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LineFrameLayout"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/PosterTypeTextViewBuyPosterTypeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/FontSemiDarkThemeColor" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/Line1FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/LinearPosterTypeDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_margin="10dp"
        android:background="@color/LineTopColor" />

    <LinearLayout
        android:id="@+id/LinearPriceDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Line1FrameLayout"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="@string/toman"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontSemiDarkThemeColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/priceTextViewBuyPosterTypeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/FontSemiDarkThemeColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="@string/consumer_credit_per_hour"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/Line2FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/LinearPriceDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_margin="10dp"
        android:background="@color/LineTopColor" />


    <LinearLayout
        android:id="@+id/LinearLayoutDayHoursPickerBuyPosterTypeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Line2FrameLayout"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded,UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/day"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <NumberPicker
                android:id="@+id/DayNumberPickerBuyPosterTypeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:ignore="HardcodedText" />

            <NumberPicker
                android:id="@+id/HoursNumberPickerBuyPosterTypeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:text="@string/hours"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/Line3FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/LinearLayoutDayHoursPickerBuyPosterTypeFragment"
        android:layout_margin="8dp"
        android:background="@color/LineTopColor" />

    <LinearLayout
        android:id="@+id/LinearTotalPriceDialogBuyPosterTypeBuyPosterTypeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Line3FrameLayout"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="@string/toman"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FontSemiDarkThemeColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:id="@+id/TotalPriceTextViewBuyPosterTypeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/FontSemiDarkThemeColor" />

        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="@string/payment_credit"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ReturnAndNextLinearLayoutBuyPosterTypeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
            android:id="@+id/NextButtonBuyPosterTypeFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_button_green_style"
            android:text="@string/continue_shopping_process"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/FontWhiteColor"
            android:textStyle="bold" />

        <ir.rayas.app.citywareclient.Share.Layout.View.ButtonPersianView
            android:id="@+id/ReturnButtonBuyPosterTypeFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_button_theme_style"
            android:text="@string/back"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/FontWhiteColor"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
