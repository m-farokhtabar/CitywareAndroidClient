<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundWhiteColor"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal|center_vertical"
                app:elevation="8dp"
                tools:ignore="NestedWeights">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp"
                    tools:ignore="RtlHardcoded">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/TotalNumberCustomerTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toLeftOf="@+id/TotalNumberCustomerTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_toStartOf="@+id/TotalNumberCustomerTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/FontBlackColor" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/TotalNumberCustomerTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="false"
                            android:text="@string/total_number_of_customers_introduced_to_the_business"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/NumberCustomerUseTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toLeftOf="@+id/NumberCustomerUseTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_toStartOf="@+id/NumberCustomerUseTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/FontBlackColor" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/NumberCustomerUseTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="false"
                            android:text="@string/number_of_customers_who_have_used_the_business"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ProgressBar
                            android:id="@+id/PercentCustomerNumberProgressBarShowMarketerCommissionDetailsActivity"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/circular_percent_progress_bar_yellow"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:secondaryProgress="100" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/PercentCustomerNumberTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="96%"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/FontSemiDarkThemeColor"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_horizontal|center_vertical"
                app:elevation="8dp"
                tools:ignore="NestedWeights">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp"
                    tools:ignore="RtlHardcoded">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/TotalAmountCommissionTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toLeftOf="@+id/TotalAmountCommissionTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_toStartOf="@+id/TotalAmountCommissionTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/FontBlackColor" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/TotalAmountCommissionTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="false"
                            android:text="@string/total_amount_of_commission"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/AmountCommissionPaidTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toLeftOf="@+id/AmountCommissionPaidTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_toStartOf="@+id/AmountCommissionPaidTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/FontBlackColor" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/AmountCommissionPaidTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="false"
                            android:text="@string/amount_of_commission_paid"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/RemainingAmountCommissionTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toLeftOf="@+id/RemainingAmountCommissionTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_toStartOf="@+id/RemainingAmountCommissionTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/FontBlackColor" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/RemainingAmountCommissionTitleTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:singleLine="false"
                            android:text="@string/remaining_amount_of_commission"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/FontSemiBlackColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ProgressBar
                            android:id="@+id/PercentAmountCommissionProgressBarShowMarketerCommissionDetailsActivity"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/circular_percent_progress_bar_yellow"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:secondaryProgress="100" />

                        <ir.rayas.app.citywareclient.Share.Layout.View.TextViewPersian
                            android:id="@+id/PercentAmountCommissionTextViewShowMarketerCommissionDetailsActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="96%"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/FontSemiDarkThemeColor"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>


