<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item android:left="0dp" android:top="4dp">

            <!-- SHADOW LAYER -->
            <shape>
                <corners android:radius="4dp" />
                <solid android:color="@color/Shadow" />
            </shape>
        </item>
        <item android:right="0dp" android:bottom="2dp">
            <!-- CONTENT LAYER-->
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <padding android:right="10dp" android:bottom="5dp" android:left="10dp" android:top="5dp"/>
                <solid android:color="@color/ButtonBackgroundThemeColor"/>
                <stroke
                    android:width="1dp"
                    android:color="@color/ButtonBorderThemeColor" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>