<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
            android:useLevel="false">

            <solid android:color="#ccc" />

        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape
            android:shape="oval">

            <gradient
            android:angle="45"
            android:endColor="#ff1e003d"
            android:startColor="#990a87e7" />

            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
</layer-list>